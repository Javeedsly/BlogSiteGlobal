@model IEnumerable<ContactMessage>

@{
    ViewData["Title"] = "Gələn Mesajlar";
}

<div class="container mt-5">
    <h2>Gələn Mesajlar</h2>
    <table class="table table-bordered table-striped mt-4">
        <thead class="thead-dark">
            <tr>
                <th>#</th>
                <th>Ad</th>
                <th>Email</th>
                <th>Mövzu</th>
                <th>Mesaj</th>
                <th>Göndərilmə Tarixi</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Id</td>
                    <td>@item.Name</td>
                    <td>@item.Email</td>
                    <td>@item.Subject</td>
                    <td>@item.Message</td>
                    <td>@item.CreatedAt.ToString("dd.MM.yyyy HH:mm")</td>
                </tr>
            }
        </tbody>
    </table>
</div>
